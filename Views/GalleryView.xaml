<UserControl x:Class="VoltBettaManager.Views.GalleryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             xmlns:helpers="clr-namespace:VoltBettaManager.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Photo Gallery" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="View and manage photos of Volt and his tank" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Photo" Command="{Binding AddPhotoCommand}" 
                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Filter Controls -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search photos..." Padding="8,6"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="15,0,0,0">
                        <TextBlock Text="Filter by Category" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Categories}" 
                                  SelectedItem="{Binding SelectedCategory}" 
                                  DisplayMemberPath="."
                                  PlaceholderText="All Categories"
                                  Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Photo Grid -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel>
                        <ItemsControl ItemsSource="{Binding FilteredPhotos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="10" Padding="10"
                                            Width="200" Height="240">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Image Grid.Row="0" Source="{Binding ImageSource}" 
                                                   Width="180" Height="120" Stretch="Uniform"/>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding Caption}" 
                                                       TextTrimming="CharacterEllipsis" TextWrapping="Wrap"
                                                       Height="40" Margin="0,10,0,5"/>
                                            
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                                                <TextBlock Text="{Binding DateTaken, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                           Foreground="#666" FontSize="11"/>
                                                <Border Background="{StaticResource SecondaryBrush}" 
                                                        CornerRadius="4" Padding="5,1" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="View" 
                                                        Command="{Binding DataContext.ViewPhotoCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Padding="10,3" Margin="0,0,5,0"/>
                                                <Button Content="Delete" 
                                                        Command="{Binding DataContext.DeletePhotoCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Padding="10,3" Margin="5,0,0,0" Background="#e74c3c" Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Empty state -->
            <TextBlock Grid.Row="1" Text="No photos found. Add some photos to get started!" 
                       Visibility="{Binding FilteredPhotos.Count, Converter={StaticResource CountToVisibilityConverter}}"
                       Foreground="#666" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Add Photo Popup -->
        <Popup x:Name="addPhotoPopup" IsOpen="{Binding IsAddingPhoto}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="400" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Photo" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Caption" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewPhoto.Caption, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="60" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Category" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding CategoryOptions}" 
                                  SelectedItem="{Binding NewPhoto.Category}" 
                                  DisplayMemberPath="."
                                  Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddPhotoCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Select & Add Photo" Command="{Binding SavePhotoCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Photo Detail View -->
        <Border Grid.Row="0" Grid.RowSpan="2" Background="#80000000" 
                Visibility="{Binding IsViewingPhoto, Converter={StaticResource BoolToVisConverter}}">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="700" Height="550" CornerRadius="8" VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Photo Image -->
                    <Image Grid.Row="0" Source="{Binding CurrentPhotoImage}" 
                           MaxWidth="650" MaxHeight="400" Stretch="Uniform"/>
                    
                    <!-- Photo Details -->
                    <StackPanel Grid.Row="1" Margin="0,15,0,20">
                        <TextBlock Text="{Binding SelectedPhoto.Caption}" 
                                   FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="{Binding SelectedPhoto.DateTaken, StringFormat='Date: {0:MMM dd, yyyy}'}" 
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedPhoto.Category, StringFormat='Category: {0}'}" 
                                       Foreground="#666" Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button Grid.Row="2" Content="Close" Command="{Binding ClosePhotoViewCommand}" 
                            HorizontalAlignment="Center" Padding="20,8"/>
                    
                    <!-- Close X Button in top right corner -->
                    <Button Grid.Row="0" Content="X" Command="{Binding ClosePhotoViewCommand}" 
                            VerticalAlignment="Top" HorizontalAlignment="Right" 
                            Width="30" Height="30" Padding="0" Margin="0,0,0,0" 
                            Background="Transparent" BorderBrush="Transparent" 
                            Foreground="#666" FontWeight="Bold" FontSize="16"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
