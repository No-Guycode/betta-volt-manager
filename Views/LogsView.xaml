<UserControl x:Class="VoltBettaManager.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Tank Logs" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Record events, observations and maintenance activities" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Log" Command="{Binding AddLogCommand}" 
                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Log List and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Log List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search logs..." Padding="8,6" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding Categories}" 
                                  SelectedItem="{Binding SelectedCategory}" 
                                  DisplayMemberPath="." 
                                  PlaceholderText="All Categories"
                                  Width="270" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <!-- Log list -->
                    <ListView Grid.Row="1" ItemsSource="{Binding FilteredLogs}" 
                              SelectedItem="{Binding SelectedLog}"
                              BorderThickness="0" Margin="0,5,0,15"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Title}" 
                                                   FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        
                                        <Border Grid.Column="1" Background="{StaticResource SecondaryBrush}" 
                                                CornerRadius="4" Padding="6,2" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding LogDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                               Foreground="#666" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Log Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title -->
                    <TextBox Grid.Row="0" Text="{Binding EditableLog.Title, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="20" FontWeight="Bold" BorderThickness="0" 
                             IsEnabled="{Binding IsEditing}" Margin="0,0,0,15"/>
                    
                    <!-- Date and Category -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Date: " Foreground="#666"/>
                            <DatePicker SelectedDate="{Binding EditableLog.LogDateTime}" 
                                        IsEnabled="{Binding IsEditing}" BorderThickness="0"/>
                            <TextBlock Text="Time: " Foreground="#666" Margin="15,0,0,0"/>
                            <TextBox Text="{Binding TimeText, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80" IsEnabled="{Binding IsEditing}" BorderThickness="0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Category: " Foreground="#666" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding CategoryOptions}" 
                                      SelectedItem="{Binding EditableLog.Category}"
                                      IsEnabled="{Binding IsEditing}" 
                                      Width="120" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Description -->
                    <TextBox Grid.Row="2" Text="{Binding EditableLog.Description, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"
                             IsEnabled="{Binding IsEditing}" Margin="0,0,0,20"
                             BorderThickness="1" Padding="10"/>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Edit" Command="{Binding EditLogCommand}" 
                                Visibility="{Binding EditButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Save" Command="{Binding SaveLogCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"
                                Background="#999999"/>
                        
                        <Button Content="Delete" Command="{Binding DeleteLogCommand}" 
                                Background="#e74c3c" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="4" 
                                Visibility="{Binding EmptyStateVisibility}"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No Log Selected" FontSize="18" Foreground="#666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a log from the list or create a new one" 
                                   Foreground="#999" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add/Edit Log Popup -->
        <Popup x:Name="addLogPopup" IsOpen="{Binding IsAddingLog}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="500" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Log" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Title" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewLog.Title, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Date" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding NewLog.LogDateTime}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Category" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CategoryOptions}" 
                                      SelectedItem="{Binding NewLog.Category}" 
                                      DisplayMemberPath="."
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewLog.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="150" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddLogCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Log" Command="{Binding SaveNewLogCommand}" 
                                IsEnabled="{Binding CanAddLog}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
