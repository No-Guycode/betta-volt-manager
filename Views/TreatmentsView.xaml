<UserControl x:Class="VoltBettaManager.Views.TreatmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             xmlns:helpers="clr-namespace:VoltBettaManager.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Treatment Plans" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Track illness treatments and monitor symptoms" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Treatment Plan" Command="{Binding AddTreatmentCommand}" 
                    Background="{StaticResource AccentBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Treatment List and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Treatment List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search treatments..." Padding="8,6" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding SelectedStatus}" 
                                  DisplayMemberPath="."
                                  PlaceholderText="All Statuses"
                                  Width="270" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <!-- Treatment list -->
                    <ListView Grid.Row="1" ItemsSource="{Binding FilteredTreatments}" 
                              SelectedItem="{Binding SelectedTreatment}"
                              BorderThickness="0" Margin="0,5,0,15"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="{Binding IllnessName}" 
                                               FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding StartDate, StringFormat='Started: {0:MMM dd, yyyy}'}" 
                                               Foreground="#666" FontSize="11"/>
                                    
                                    <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" 
                                            CornerRadius="4" Padding="6,2" HorizontalAlignment="Left"
                                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Status}" FontSize="10" Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Treatment Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Illness Name and Status -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" Text="{Binding EditableTreatment.IllnessName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="20" FontWeight="Bold" BorderThickness="0" 
                                 IsEnabled="{Binding IsEditing}"/>
                        
                        <ComboBox Grid.Column="1" ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding EditableTreatment.Status}"
                                  IsEnabled="{Binding IsEditing}" 
                                  Width="150"/>
                    </Grid>
                    
                    <!-- Treatment Dates -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Start Date:" Foreground="#666" VerticalAlignment="Center"/>
                        <DatePicker Grid.Column="1" SelectedDate="{Binding EditableTreatment.StartDate}" 
                                    IsEnabled="{Binding IsEditing}" Margin="10,0,20,0"/>
                        
                        <TextBlock Grid.Column="2" Text="End Date:" Foreground="#666" VerticalAlignment="Center"/>
                        <DatePicker Grid.Column="3" SelectedDate="{Binding EditableTreatment.EndDate}" 
                                    IsEnabled="{Binding IsEditing}" Margin="10,0,0,0"/>
                    </Grid>
                    
                    <!-- Medication Notes -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Medication Notes:" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EditableTreatment.MedicationNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="60" IsEnabled="{Binding IsEditing}" Padding="10,5"/>
                    </StackPanel>
                    
                    <!-- Tabbed content for Treatment Logs, Symptoms, and Photos -->
                    <TabControl Grid.Row="3" Margin="0,0,0,15">
                        <TabItem Header="Treatment Logs">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="Add Treatment Log" Command="{Binding AddTreatmentLogCommand}" 
                                        Background="{StaticResource SecondaryBrush}" Foreground="White"
                                        Padding="10,5" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                                
                                <ListView Grid.Row="1" ItemsSource="{Binding TreatmentLogs}" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0" Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                           FontWeight="SemiBold"/>
                                                
                                                <TextBlock Grid.Row="1" Text="{Binding Actions}" 
                                                           Margin="0,5,0,0" TextWrapping="Wrap"/>
                                                
                                                <TextBlock Grid.Row="2" Text="{Binding Notes}" 
                                                           Foreground="#666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Symptoms">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="Add Symptom" Command="{Binding AddSymptomCommand}" 
                                        Background="{StaticResource AccentBrush}" Foreground="White"
                                        Padding="10,5" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                                
                                <ListView Grid.Row="1" ItemsSource="{Binding Symptoms}" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" 
                                                           FontWeight="SemiBold"/>
                                                
                                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Current Severity:" Foreground="#666" Margin="0,0,5,0"/>
                                                    <Border Background="{StaticResource PrimaryBrush}" 
                                                            CornerRadius="4" Padding="5,2">
                                                        <TextBlock Text="{Binding Severity}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                </StackPanel>
                                                
                                                <Button Grid.Row="0" Grid.Column="1" Content="Update" 
                                                        Command="{Binding DataContext.UpdateSymptomCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding DataContext.Symptoms.IndexOf(Binding), 
                                                            RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                        Padding="8,2" VerticalAlignment="Top"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Photos">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="Add Photo" Command="{Binding AddPhotoCommand}" 
                                        Background="{StaticResource PrimaryBrush}" Foreground="White"
                                        Padding="10,5" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                                
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <WrapPanel>
                                        <ItemsControl ItemsSource="{Binding TreatmentPhotos}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="5" Padding="5"
                                                            Width="170" Height="170">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <Image Grid.Row="0" Source="{Binding ImageSource}" 
                                                                   Width="150" Height="100" Stretch="Uniform"/>
                                                            
                                                            <TextBlock Grid.Row="1" Text="{Binding Caption}" 
                                                                       TextTrimming="CharacterEllipsis" TextWrapping="Wrap"
                                                                       Height="30" Margin="0,5,0,5"/>
                                                            
                                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <Button Content="Delete" 
                                                                        Command="{Binding DataContext.DeletePhotoCommand, 
                                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                        CommandParameter="{Binding}"
                                                                        Padding="8,2" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Complete Treatment" Command="{Binding CompleteTreatmentCommand}" 
                                Background="{StaticResource SecondaryBrush}" Foreground="White"
                                Visibility="{Binding CompleteTreatmentButtonVisibility}"
                                Margin="0,0,10,0"/>
                        
                        <Button Content="Edit" Command="{Binding EditTreatmentCommand}" 
                                Visibility="{Binding EditButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Save" Command="{Binding SaveTreatmentCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"
                                Background="#999999"/>
                        
                        <Button Content="Delete" Command="{Binding DeleteTreatmentCommand}" 
                                Background="#e74c3c" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="5" 
                                Visibility="{Binding EmptyStateVisibility}"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No Treatment Selected" FontSize="18" Foreground="#666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a treatment from the list or create a new one" 
                                   Foreground="#999" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add Treatment Popup -->
        <Popup x:Name="addTreatmentPopup" IsOpen="{Binding IsAddingTreatment}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="500" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Treatment Plan" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Illness Name" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTreatment.IllnessName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Start Date" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding NewTreatment.StartDate}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTreatment.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="100" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddTreatmentCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Treatment" Command="{Binding SaveNewTreatmentCommand}" 
                                IsEnabled="{Binding CanAddTreatment}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Add Treatment Log Popup -->
        <Popup x:Name="addTreatmentLogPopup" IsOpen="{Binding IsAddingTreatmentLog}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="450" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add Treatment Log Entry" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Date" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding NewTreatmentLog.Date}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Actions Performed" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTreatmentLog.Actions, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="80" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Notes (Optional)" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTreatmentLog.Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="60" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddTreatmentLogCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Log" Command="{Binding SaveTreatmentLogCommand}" 
                                IsEnabled="{Binding CanAddTreatmentLog}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Add Symptom Popup -->
        <Popup x:Name="addSymptomPopup" IsOpen="{Binding IsAddingSymptom}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="400" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Symptom" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Symptom Name" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewSymptomName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Severity" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding SeverityOptions}" 
                                  SelectedItem="{Binding NewSymptomSeverity}" 
                                  Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Notes (Optional)" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SymptomNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="60" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddSymptomCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Symptom" Command="{Binding SaveSymptomCommand}" 
                                IsEnabled="{Binding CanAddSymptom}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Update Symptom Popup -->
        <Popup x:Name="updateSymptomPopup" IsOpen="{Binding IsUpdatingSymptom}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="400" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Update Symptom" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="New Severity" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding SeverityOptions}" 
                                  SelectedItem="{Binding UpdatedSymptomSeverity}" 
                                  Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Notes" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SymptomNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="60" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelUpdateSymptomCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Save Update" Command="{Binding SaveSymptomUpdateCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Add Photo Popup -->
        <Popup x:Name="addPhotoPopup" IsOpen="{Binding IsAddingPhoto}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="400" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add Treatment Photo" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Caption" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PhotoCaption, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="60" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddPhotoCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Select & Add Photo" Command="{Binding SavePhotoCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Complete Treatment Popup -->
        <Popup x:Name="completeTreatmentPopup" IsOpen="{Binding IsCompletingTreatment}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="450" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Complete Treatment" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Treatment Outcome" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding TreatmentOutcome, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="100" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelCompleteTreatmentCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Complete Treatment" Command="{Binding SaveCompleteTreatmentCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
