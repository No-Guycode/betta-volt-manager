<UserControl x:Class="VoltBettaManager.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             xmlns:helpers="clr-namespace:VoltBettaManager.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Maintenance &amp; Reminders" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Manage tank maintenance tasks and set up reminders" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Task" Command="{Binding AddTaskCommand}" 
                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Task List and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Task List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search tasks..." Padding="8,6" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding CategoryOptions}" 
                                  SelectedItem="{Binding SelectedCategory}" 
                                  DisplayMemberPath="."
                                  PlaceholderText="All Categories"
                                  Width="270" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Show Completed Tasks" 
                                  IsChecked="{Binding ShowCompleted}"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Task list -->
                    <ListView Grid.Row="1" ItemsSource="{Binding FilteredTasks}" 
                              SelectedItem="{Binding SelectedTask}"
                              BorderThickness="0" Margin="0,5,0,15"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Title}" 
                                                   FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        
                                        <Border Grid.Column="1" Background="{StaticResource PrimaryBrush}" 
                                                CornerRadius="4" Padding="6,2" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding ScheduledDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                               Foreground="#666" FontSize="11"/>
                                    
                                    <Border Grid.Row="2" Background="#EEEEEE" CornerRadius="2" 
                                            Padding="5,2" HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Status}" FontSize="10"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Task Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title -->
                    <TextBox Grid.Row="0" Text="{Binding EditableTask.Title, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="20" FontWeight="Bold" BorderThickness="0" 
                             IsEnabled="{Binding IsEditing}" Margin="0,0,0,15"/>
                    
                    <!-- Scheduled Date and Category -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Scheduled For:" Foreground="#666" VerticalAlignment="Center"/>
                        
                        <DatePicker Grid.Column="1" SelectedDate="{Binding EditableTask.ScheduledDateTime}" 
                                    IsEnabled="{Binding IsEditing}" Margin="10,0,0,0"/>
                        
                        <ComboBox Grid.Column="2" ItemsSource="{Binding CategoryOptions}" 
                                  SelectedItem="{Binding EditableTask.Category}"
                                  IsEnabled="{Binding IsEditing}" 
                                  Width="150" Margin="10,0,0,0"/>
                    </Grid>
                    
                    <!-- Recurrence Options -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Content="Recurring Task" 
                                  IsChecked="{Binding EditableTask.IsRecurring}"
                                  IsEnabled="{Binding IsEditing}"/>
                        
                        <TextBlock Grid.Column="1" Text="Frequency (days):" Margin="20,0,10,0" 
                                   Visibility="{Binding EditableTask.IsRecurring, Converter={StaticResource BoolToVisConverter}}"
                                   VerticalAlignment="Center"/>
                        
                        <TextBox Grid.Column="2" Text="{Binding EditableTask.RecurrenceFrequencyDays}" 
                                 Visibility="{Binding EditableTask.IsRecurring, Converter={StaticResource BoolToVisConverter}}"
                                 IsEnabled="{Binding IsEditing}" Width="60" HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <!-- Notification Options -->
                    <Grid Grid.Row="3" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Content="Enable Notifications" 
                                  IsChecked="{Binding EditableTask.NotificationsEnabled}"
                                  IsEnabled="{Binding IsEditing}"/>
                        
                        <TextBlock Grid.Column="1" Text="(You will receive a notification 1 hour before the scheduled time)" 
                                   Foreground="#666" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Description -->
                    <Grid Grid.Row="4" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Description:" Foreground="#666" Margin="0,0,0,5"/>
                        
                        <TextBox Grid.Row="1" Text="{Binding EditableTask.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"
                                 IsEnabled="{Binding IsEditing}" BorderThickness="1" Padding="10"/>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Mark Complete" Command="{Binding CompleteTaskCommand}" 
                                Background="{StaticResource SecondaryBrush}" Foreground="White"
                                Visibility="{Binding ShowCompleteButtonVisibility}"
                                Margin="0,0,10,0"/>
                        
                        <Button Content="Edit" Command="{Binding EditTaskCommand}" 
                                Visibility="{Binding EditButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Save" Command="{Binding SaveTaskCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"
                                Background="#999999"/>
                        
                        <Button Content="Delete" Command="{Binding DeleteTaskCommand}" 
                                Background="#e74c3c" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="6" 
                                Visibility="{Binding EmptyStateVisibility}"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No Task Selected" FontSize="18" Foreground="#666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a task from the list or create a new one" 
                                   Foreground="#999" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add Task Popup -->
        <Popup x:Name="addTaskPopup" IsOpen="{Binding IsAddingTask}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="500" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Maintenance Task" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Title" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTask.Title, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Scheduled Date" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding NewTask.ScheduledDateTime}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Category" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CategoryOptions}" 
                                      SelectedItem="{Binding NewTask.Category}" 
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="3" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <CheckBox Grid.Row="0" Content="Recurring Task" 
                                  IsChecked="{Binding NewTask.IsRecurring}"/>
                        
                        <Grid Grid.Row="1" 
                              Visibility="{Binding NewTask.IsRecurring, Converter={StaticResource BoolToVisConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Repeat every" Margin="20,10,10,0"/>
                            <TextBox Grid.Column="1" Text="{Binding NewTask.RecurrenceFrequencyDays}" 
                                     Width="50" HorizontalAlignment="Left" Margin="0,5,5,0"/>
                            <TextBlock Grid.Column="1" Text="days" Margin="60,10,0,0"/>
                        </Grid>
                    </Grid>
                    
                    <CheckBox Grid.Row="4" Content="Enable Notifications" 
                              IsChecked="{Binding NewTask.NotificationsEnabled}"
                              Margin="0,0,0,15"/>
                    
                    <StackPanel Grid.Row="5" Margin="0,0,0,20">
                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTask.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="100" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddTaskCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Task" Command="{Binding SaveNewTaskCommand}" 
                                IsEnabled="{Binding CanAddTask}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
