<UserControl x:Class="VoltBettaManager.Views.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             xmlns:helpers="clr-namespace:VoltBettaManager.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Notes" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="General observations and notes about Volt and his tank" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Note" Command="{Binding AddNoteCommand}" 
                    Background="{StaticResource AccentBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Note List and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Note List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search notes..." Padding="8,6" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding TagOptions}" 
                                  SelectedItem="{Binding SelectedTag}" 
                                  DisplayMemberPath="."
                                  PlaceholderText="All Tags"
                                  Width="270" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <!-- Note list -->
                    <ListView Grid.Row="1" ItemsSource="{Binding FilteredNotes}" 
                              SelectedItem="{Binding SelectedNote}"
                              BorderThickness="0" Margin="0,5,0,15"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="{Binding Title}" 
                                               FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding Content}" 
                                               TextTrimming="CharacterEllipsis" Margin="0,5,0,0"
                                               Foreground="#666" MaxHeight="40"/>
                                    
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding ModifiedDateTime, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                   Foreground="#666" FontSize="11"/>
                                        
                                        <ItemsControl ItemsSource="{Binding TagList}" Margin="10,0,0,0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource PrimaryBrush}" 
                                                            CornerRadius="4" Padding="5,1" Margin="0,0,5,0">
                                                        <TextBlock Text="{Binding}" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Note Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title -->
                    <TextBox Grid.Row="0" Text="{Binding EditableNote.Title, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="20" FontWeight="Bold" BorderThickness="0" 
                             IsEnabled="{Binding IsEditing}" Margin="0,0,0,15"/>
                    
                    <!-- Date and Tags -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Created:" Foreground="#666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding EditableNote.CreatedDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                   Margin="5,0,0,0" VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="2" Text="Tags:" Foreground="#666" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBox Grid.Column="3" Text="{Binding EditableNote.Tags, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding IsEditing}" Margin="5,0,0,0"
                                 BorderThickness="0" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Content -->
                    <TextBox Grid.Row="2" Text="{Binding EditableNote.Content, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"
                             IsEnabled="{Binding IsEditing}" Margin="0,0,0,20"
                             BorderThickness="1" Padding="10"/>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Edit" Command="{Binding EditNoteCommand}" 
                                Visibility="{Binding EditButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Save" Command="{Binding SaveNoteCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"
                                Background="#999999"/>
                        
                        <Button Content="Delete" Command="{Binding DeleteNoteCommand}" 
                                Background="#e74c3c" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="4" 
                                Visibility="{Binding EmptyStateVisibility}"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No Note Selected" FontSize="18" Foreground="#666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a note from the list or create a new one" 
                                   Foreground="#999" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add Note Popup -->
        <Popup x:Name="addNotePopup" IsOpen="{Binding IsAddingNote}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="500" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Note" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Title" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewNote.Title, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Tags (separated by commas)" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewNote.Tags, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Content" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewNote.Content, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="150" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddNoteCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Note" Command="{Binding SaveNewNoteCommand}" 
                                IsEnabled="{Binding CanAddNote}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
