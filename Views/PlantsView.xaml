<UserControl x:Class="VoltBettaManager.Views.PlantsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltBettaManager.Views"
             xmlns:helpers="clr-namespace:VoltBettaManager.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Plant Care" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Track and manage plants in your tank" Foreground="#666" Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="Add New Plant" Command="{Binding AddPlantCommand}" 
                    Background="{StaticResource SecondaryBrush}" Foreground="White"
                    Padding="15,8" VerticalAlignment="Top"/>
        </Grid>
        
        <!-- Plant List and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Plant List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 PlaceholderText="Search plants..." Padding="8,6" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding LocationOptions}" 
                                  SelectedItem="{Binding SelectedLocation}" 
                                  DisplayMemberPath="."
                                  PlaceholderText="All Locations"
                                  Width="270" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <!-- Plant list -->
                    <ListView Grid.Row="1" ItemsSource="{Binding FilteredPlants}" 
                              SelectedItem="{Binding SelectedPlant}"
                              BorderThickness="0" Margin="0,5,0,15"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                   FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        
                                        <Border Grid.Column="1" Background="{StaticResource SecondaryBrush}" 
                                                CornerRadius="4" Padding="6,2" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Location}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding ScientificName}" 
                                                   Foreground="#666" FontSize="11" FontStyle="Italic"/>
                                        
                                        <Border Background="#FFEEEE" CornerRadius="4" Padding="5,0" 
                                                Margin="10,0,0,0" 
                                                Visibility="{Binding HasUnresolvedIssues, Converter={StaticResource BoolToVisConverter}}">
                                            <TextBlock Text="Issues" Foreground="#CC0000" FontSize="10"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Plant Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Name and Scientific Name -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBox Grid.Row="0" Text="{Binding EditablePlant.Name, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="20" FontWeight="Bold" BorderThickness="0" 
                                 IsEnabled="{Binding IsEditing}"/>
                        
                        <TextBox Grid.Row="1" Text="{Binding EditablePlant.ScientificName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontStyle="Italic" BorderThickness="0" 
                                 IsEnabled="{Binding IsEditing}"/>
                    </Grid>
                    
                    <!-- Plant Details -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Added Date:" Foreground="#666" VerticalAlignment="Center"/>
                        <DatePicker Grid.Column="1" SelectedDate="{Binding EditablePlant.AddedDate}" 
                                    IsEnabled="{Binding IsEditing}" Margin="10,0,20,0"/>
                        
                        <TextBlock Grid.Column="2" Text="Location:" Foreground="#666" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="3" ItemsSource="{Binding LocationOptions}" 
                                  SelectedItem="{Binding EditablePlant.Location}"
                                  IsEnabled="{Binding IsEditing}" 
                                  Width="150" Margin="10,0,0,0"/>
                    </Grid>
                    
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Light Requirement:" Foreground="#666" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding LightLevelOptions}" 
                                  SelectedItem="{Binding EditablePlant.LightRequirement}"
                                  IsEnabled="{Binding IsEditing}" 
                                  Width="150" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <!-- Tabbed content for Care Notes and Issues -->
                    <TabControl Grid.Row="3" Margin="0,0,0,15">
                        <TabItem Header="Care Notes">
                            <TextBox Text="{Binding EditablePlant.CareNotes, UpdateSourceTrigger=PropertyChanged}" 
                                     TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"
                                     IsEnabled="{Binding IsEditing}" BorderThickness="1" Padding="10"/>
                        </TabItem>
                        <TabItem Header="Issues">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Content="Add Issue" Command="{Binding AddIssueCommand}" 
                                            Background="{StaticResource AccentBrush}" Foreground="White"
                                            Padding="10,5" Margin="0,0,10,0"/>
                                    
                                    <TextBlock Text="Active Issues:" Foreground="#666" VerticalAlignment="Center" 
                                               Visibility="{Binding HasUnresolvedIssues, Converter={StaticResource BoolToVisConverter}}"/>
                                </StackPanel>
                                
                                <ListView Grid.Row="1" ItemsSource="{Binding UnresolvedIssues}" 
                                          BorderThickness="0"
                                          Visibility="{Binding HasUnresolvedIssues, Converter={StaticResource BoolToVisConverter}}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Description}" FontWeight="SemiBold"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Border Background="#FFEEEE" CornerRadius="4" Padding="5,2" Margin="0,0,10,0">
                                                            <TextBlock Text="{Binding Severity}" FontSize="10"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding DateIdentified, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                                   FontSize="10" Foreground="#666"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" Content="Resolve" 
                                                        Command="{Binding DataContext.ResolveIssueCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding DataContext.Issues.IndexOf(Binding), 
                                                            RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                        Padding="8,2" VerticalAlignment="Top"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                
                                <TextBlock Grid.Row="1" Text="No active issues for this plant" 
                                           Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="{Binding HasUnresolvedIssues, Converter={StaticResource InverseBoolToVisConverter}}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Issue History">
                            <ListView ItemsSource="{Binding PlantIssues}" BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Text="{Binding Description}" FontWeight="SemiBold"/>
                                            
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                                <Border Background="#FFEEEE" CornerRadius="4" Padding="5,2" Margin="0,0,10,0">
                                                    <TextBlock Text="{Binding Severity}" FontSize="10"/>
                                                </Border>
                                                <TextBlock Text="{Binding DateIdentified, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                           FontSize="10" Foreground="#666"/>
                                                <Border Background="#EEFFEE" CornerRadius="4" Padding="5,2" Margin="10,0,0,0"
                                                        Visibility="{Binding IsResolved, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="Resolved" FontSize="10" Foreground="#008800"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="2" Margin="0,5,0,0"
                                                        Visibility="{Binding IsResolved, Converter={StaticResource BoolToVisConverter}}">
                                                <TextBlock Text="{Binding ResolutionDate, StringFormat='Resolved on: {0:MMM dd, yyyy}'}" 
                                                           FontSize="10" Foreground="#666"/>
                                                <TextBlock Text="{Binding ResolutionNotes}" 
                                                           FontSize="11" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Edit" Command="{Binding EditPlantCommand}" 
                                Visibility="{Binding EditButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Save" Command="{Binding SavePlantCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"/>
                        
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                Visibility="{Binding SaveButtonVisibility}" Margin="0,0,10,0"
                                Background="#999999"/>
                        
                        <Button Content="Delete" Command="{Binding DeletePlantCommand}" 
                                Background="#e74c3c" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="5" 
                                Visibility="{Binding EmptyStateVisibility}"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No Plant Selected" FontSize="18" Foreground="#666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a plant from the list or create a new one" 
                                   Foreground="#999" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add Plant Popup -->
        <Popup x:Name="addPlantPopup" IsOpen="{Binding IsAddingPlant}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="500" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Plant" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Name" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewPlant.Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Scientific Name (Optional)" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewPlant.ScientificName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="3" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Location" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding LocationOptions}" 
                                      SelectedItem="{Binding NewPlant.Location}" 
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Light Requirement" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding LightLevelOptions}" 
                                      SelectedItem="{Binding NewPlant.LightRequirement}" 
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Grid.Row="4" Margin="0,0,0,20">
                        <TextBlock Text="Care Notes" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewPlant.CareNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="100" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddPlantCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Plant" Command="{Binding SaveNewPlantCommand}" 
                                IsEnabled="{Binding CanAddPlant}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Add Issue Popup -->
        <Popup x:Name="addIssuePopup" IsOpen="{Binding IsAddingIssue}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="450" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add New Issue" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Issue Description" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewIssue.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Severity" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding SeverityOptions}" 
                                  SelectedItem="{Binding NewIssue.Severity}" 
                                  Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelAddIssueCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Add Issue" Command="{Binding SaveNewIssueCommand}" 
                                IsEnabled="{Binding CanAddIssue}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        
        <!-- Resolve Issue Popup -->
        <Popup x:Name="resolveIssuePopup" IsOpen="{Binding IsResolvingIssue}" 
               PlacementTarget="{Binding ElementName=mainGrid}" 
               Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                    Width="450" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Resolve Issue" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Resolution Notes" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ResolutionNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="100" Padding="8,5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelResolveIssueCommand}" 
                                Background="#999999" Margin="0,0,10,0"/>
                        <Button Content="Mark as Resolved" Command="{Binding SaveIssueResolutionCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
