<Window x:Class="VoltBettaManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoltBettaManager"
        xmlns:views="clr-namespace:VoltBettaManager.Views"
        mc:Ignorable="d"
        Title="Volt Betta Manager" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="White" BoxShadow="2 0 10 0 #20000000">
            <StackPanel>
                <!-- App header with logo -->
                <Border Height="120" Background="{StaticResource PrimaryBrush}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Volt" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Betta Manager" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Navigation buttons -->
                <Button x:Name="btnLogs" 
                        Content="Tank Logs" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Logs"/>
                
                <Button x:Name="btnMaintenance" 
                        Content="Maintenance &amp; Reminders" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Maintenance"/>
                
                <Button x:Name="btnPlants" 
                        Content="Plant Care" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Plants"/>
                
                <Button x:Name="btnTreatments" 
                        Content="Treatment Plans" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Treatments"/>
                
                <Button x:Name="btnGallery" 
                        Content="Photo Gallery" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Gallery"/>
                
                <Button x:Name="btnNotes" 
                        Content="Notes" 
                        Style="{StaticResource NavigationButton}" 
                        Click="NavigationButton_Click" 
                        Tag="Notes"/>
                
                <!-- App version and footer -->
                <Border Height="60" VerticalAlignment="Bottom" Margin="0,30,0,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Version 1.0" 
                                   Foreground="#888888" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content area for displaying views -->
        <ContentControl x:Name="contentArea" Grid.Column="1" Margin="20"/>
    </Grid>
</Window>
