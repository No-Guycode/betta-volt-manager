modules = ["dotnet", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Build Android APK"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VoltBettaManagerApp"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VoltBettaApp"

[[workflows.workflow]]
name = "VoltBettaManagerApp"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run"
waitForPort = 5000

[[workflows.workflow]]
name = "run_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run"

[[workflows.workflow]]
name = "VoltBettaApp"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoltBettaApp && node run.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Build Android"
author = 38797021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoltBettaApp && npx expo prebuild && npx expo build:android"

[[workflows.workflow]]
name = "Run VoltBetta"
author = 38797021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoltBettaApp && node run.js"

[[workflows.workflow]]
name = "Run Expo"
author = 38797021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoltBettaApp && npm install && npx expo start --web"

[[workflows.workflow]]
name = "Build Android APK"
author = 38797021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoltBettaApp && source .env && npm install && npx expo install expo-dev-client && npx eas build -p android --profile preview --local"

[[workflows.workflow]]
name = "Clean Windows Files"
author = 38797021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -f VoltBettaApp/android/gradlew.bat"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.cs\" -type f -delete"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.xaml\" -type f -delete"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.sln\" -type f -delete"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.csproj\" -type f -delete"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.vcxproj\" -type f -delete"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -name \"*.dll\" -type f -delete"

[deployment]
run = ["sh", "-c", "dotnet run"]

[[ports]]
localPort = 5000
externalPort = 80
